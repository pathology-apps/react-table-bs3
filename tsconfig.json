{
  "compilerOptions": {
     "allowSyntheticDefaultImports": true,
     "declaration": true, 
     "declarationDir": "types",
     "emitDeclarationOnly": true,
     "esModuleInterop": true,
     "forceConsistentCasingInFileNames": true,
     "jsx": "react",
     "module": "ESNext",
     "moduleResolution": "node",
     "outDir": "dist", 
     "resolveJsonModule": true,
     "skipLibCheck": true,
     "strict": true, 
     "target": "es2016",
  }
}